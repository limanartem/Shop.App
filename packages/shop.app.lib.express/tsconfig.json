{
  "compilerOptions": {
    "module": "CommonJS",
    "allowJs": true,
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "noEmit": false,
    "strict": true,

    "plugins": [
      {
        "name": "typescript-strict-plugin"
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
