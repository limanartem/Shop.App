{
  "compilerOptions": {
    "module": "ESNext",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "noEmit": false, 
    "declaration": true,
    "strict": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
