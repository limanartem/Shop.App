{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "strict": true,
    "plugins": [
      {
        "name": "typescript-strict-plugin"
      }
    ],
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["src/**/*", "jest.config.ts"]
}
