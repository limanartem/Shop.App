{
  "name": "@shop.app/shopping-cart.api",
  "version": "1.0.0",
  "description": "GraphQL APIs for shopping cart of registered user",
  "main": "dist/index.js",
  "scripts": {
    "clean": "npx rimraf dist",
    "copy-files": "copyfiles -u 1 src/**/*.graphql dist/",
    "prebuild": "npm run clean",
    "postbuild": "npm run copy-files",
    "build": "tsc",
    "start-dev": "npm run build && node  -r dotenv/config .",
    "start": "node ./dist/index.js",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@graphql-codegen/cli": "5.0.0",
    "@graphql-codegen/introspection": "^4.0.0",
    "@graphql-codegen/typescript": "4.0.1",
    "@graphql-codegen/typescript-resolvers": "4.0.1",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.2",
    "@types/jest": "^27.5.2",
    "copyfiles": "^2.4.1",
    "dotenv": "^16.3.1",
    "eslint": "^8.56.0",
    "jest": "^27.5.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "27.1",
    "typescript": "^4.9.5",
    "typescript-strict-plugin": "^2.2.1"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "graphql": "^16.8.1",
    "path": "^0.12.7"
  }
}
