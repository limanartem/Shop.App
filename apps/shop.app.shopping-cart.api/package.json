{
  "name": "@shop.app/shopping-cart.api",
  "version": "1.0.0",
  "description": "GraphQL APIs for shopping cart of registered user",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "clean": "npx rimraf dist",
    "copy-files": "copyfiles -u 1 src/**/*.graphql src/**/*.css dist/",
    "prebuild": "npm run clean",
    "postbuild": "npm run copy-files",
    "build": "tsc",
    "start-dev": "npm run build && node ./dist/index.js",
    "start": "node ./dist/index.js"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.10.5",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "graphql": "^16.8.1",
    "path": "^0.12.7"
  }
}
